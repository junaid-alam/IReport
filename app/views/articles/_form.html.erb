<%= form_for(@article) do |f| %>
  <%= render :partial => 'shared/errors_for', :locals => {:obj => @article} %>
  <div class ='row'>
    <div class="col-lg-10">
      <%= f.label :title %><br>
      <%= f.text_field :title , :class => 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10">
      <div class="input-group">
        <%= f.label :content %><br>
        <%= f.cktext_area :content %>
      </div>
    </div>
  </div>

  <div class="actions form-actions">
    <%= f.submit :class => 'btn btn-success'%>
  </div>
<% end %>
